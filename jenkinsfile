#!groovy
def map
def str
properties([disableConcurrentBuilds()])

pipeline {

          parameters {
                  string name: 'project_name', defaultValue: 'VEGA', description: 'I would like it to build name'
                  text name: 'multiline', defaultValue: '', description: 'multiline text'
                  booleanParam name: 'verbose', defaultValue: false, description: 'verbose output'
                   }
         agent any
         stages {
                 stage('Set build name') {
                    steps {
                        wrap([$class: 'BuildUser']){
                            script {
                                if ("${params.BRANCH}" == 'null') {
                                    buildName "${params.project_name}-$BUILD_NUMBER-$GIT_COMMIT_SHORT"
                                }
                                else {
                                    buildName "${params.project_name}-$BUILD_NUMBER-$DEPLOY_ENVIRONMENT-${params.BRANCH}-$GIT_COMMIT_SHORT"
                                }
                            }
                            buildDescription "Executed @ ${NODE_NAME}. Build started by ${BUILD_USER}"
                        }
                      // buildName "${params.project_name}-${BUILD_NUMBER}"
                      // echo "Hi, man. Starting to build the App. ${params.multiline}"
                      // input('Do you want to proceed?')
                          }
                 }
                 stage('Test') {
                    steps {
                              script {
                                        verb_out = ''
                                        if (params.verbose) {
                                            verb_out = '-v'
                                        }
                                        toKeyValue = {
                                             it.collect { /"$it.key": "$it.value"/} join ", "
                                             }
                                        def multiline = params.multiline
                                        multiline.split("\n").each { String line ->
                                              echo "$line"
                                          }
                                        map = multiline
                                        .split("\n")
                                        .collectEntries{ entry ->
                                                  def parts = entry.split(': ')
                                                  [(parts[0]): parts[1]]

                                        }
                                        echo "$map"
                                        str = "{" + toKeyValue(map) + "}"
                                        echo "$str"

                              }
                       
                       //input('Do you want to proceed?')
                          }
                 }
                 stage('Deploy') {
                    steps {
                       ansiblePlaybook(
                                 become: false,
                                 hostKeyChecking: false,
                                 installation: 'ansible',
                                 inventory: "localhost,",
                                 playbook: 'multiline.yml',
                                 extras: "$verb_out",
                                 extraVars: [
                                    multiline: "$str",
                                    list: '["aa","bb"]'
                                    ]
                                            )
                           }
                 }
                 stage('Prod') {
                    steps {
                       echo "App is Prod Ready"
                          }

              }
         }
}
